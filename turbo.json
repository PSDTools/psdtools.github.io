{
  "$schema": "./node_modules/turbo/schema.json",
  "tasks": {
    "topo": {
      "dependsOn": ["^topo"]
    },
    "build": {
      "outputs": [
        "dist/**"
      ],
      "inputs": [
        "src/**",
        "public/**",
        "vite.config.ts",
        "index.html"
      ],
      "dependsOn": ["^topo"]
    },
    "lint": {
      "inputs": [
        "**/*.ts"
      ],
      "dependsOn": ["^topo"]
    },
    "typecheck": {
      "outputs": [
        "node_modules/.cache/tsbuildinfo.json"
      ],
      "inputs": [
        "src/**",
        "*.config.{js,ts}",
        "tsconfig.json"
      ],
      "dependsOn": ["^topo"]
    },
    "//#format": {
      "outputs": [
        "node_modules/.cache/prettier/**"
      ],
      "inputs": [
        "**/*.html",
        "**/*.ts",
        "**/*.md",
        "**/*.json",
        "**/*.js",
        "**/*.css",
        ".prettierc",
        "!**/dist/**"
      ]
    },
    "//#format:check": {
      "outputs": [
        "node_modules/.cache/prettier/**"
      ],
      "inputs": [
        "**/*.html",
        "**/*.ts",
        "**/*.md",
        "tsconfig.json",
        "turbo.json",
        "**/*.js",
        "**/*.css",
        ".prettierc",
        "!**/dist/**"
      ]
    },
    "dev": {
      "cache": false,
      "persistent": true,
      "outputs": [
        "node_modules/.vite/**",
        "dev-dist/**"
      ],
      "inputs": [
        "src/**",
        "public/**",
        "vite.config.ts",
        "index.html"
      ]
    },
    "//#manypkg": {
      "inputs": [
        "**/package.json"
      ]
    },
    "//#typesync": {
      "inputs": [
        "**/package.json"
      ]
    },
    "//#typesync:check": {
      "inputs": [
        "**/package.json",
        ".typesyncrc"
      ]
    },
    "//#check-deduped-deps": {
      "inputs": [
        "pnpm-lock.yaml",
        ".pnpmfile.cjs"
      ],
      "outputs": ["**/node_modules/"]
    },
    "//#knip": {}
  },
  "remoteCache": {
    "enabled": false
  }
}
